<resources>
    <!-- Base application theme. -->
    <style name="Theme.CapstoneArtion" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_diplomatic</item>
        <item name="colorPrimaryVariant">@color/blue_bering_sea</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.ListTile" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@color/lighter_gray</item>
        <item name="drawableEndCompat">@drawable/ic_baseline_keyboard_arrow_right_24</item>
    </style>
</resources>